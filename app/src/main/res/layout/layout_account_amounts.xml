<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/AA_accountName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/account_name"
        style="@style/CustomTextViewTheme2"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AA_accountAmount"
        style="@style/CustomTextViewTheme2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/account_amount"
        android:textAlignment="textStart"
        android:gravity="center_vertical|start"
        app:layout_constraintBottom_toBottomOf="@+id/AA_accountName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AA_accountName"
        app:layout_constraintTop_toTopOf="@+id/AA_accountName" />

</android.support.constraint.ConstraintLayout>